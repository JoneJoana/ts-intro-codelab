{
  "compilerOptions": {
    "module": "commonjs", 
    "target": "es2020", 
    "types": [],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options    
    "noUnusedParameters": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": ["src/**/*"], // s√≥lo queremos que se analicen archivos de TS dentro de la carpeta src
  "exclude": ["node_modules", "dist"] // no queremos que se analicen archivos de TS dentro de la carpeta node_modules ni dist
}
